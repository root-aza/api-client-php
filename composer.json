{
  "name": "retailcrm/api-client-php",
  "description": "PHP client for RetailCRM API",
  "type": "library",
  "keywords": ["API", "RetailCRM", "REST"],
  "homepage": "http://www.retailcrm.pro/",
  "license": "MIT",
  "authors": [
    {
      "name": "RetailCRM",
      "email": "support@retailcrm.pro"
    }
  ],
  "require": {
    "php": ">=7.3.0",
    "ext-curl": "*",
    "ext-json": "*",
    "psr/log": "^1.1",
    "psr/http-client": "^1.0",
    "psr/http-message": "^1.0",
    "php-http/client-implementation": "^1.0",
    "php-http/message-factory": "^1.0",
    "php-http/discovery": "^1.13",
    "jms/serializer": "^3.11",
    "doctrine/annotations": "^1.11",
    "doctrine/cache": "^1.10",
    "symfony/serializer": "^5.2",
    "symfony/property-access": "^5.2"
  },
  "require-dev": {
    "php-http/mock-client": "^1.0",
    "squizlabs/php_codesniffer": "^3.5",
    "phpmd/phpmd": "^2.9",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
    "phpcompatibility/php-compatibility": "^9.3",
    "phpstan/phpstan": "^0.12.74",
    "vlucas/phpdotenv": "^5.3",
    "phpunit/phpunit": "^9.5",
    "php-http/curl-client": "^2.2",
    "nyholm/psr7": "^1.3"
  },
  "scripts": {
    "phpunit": "./vendor/bin/phpunit -c phpunit.xml.dist",
    "phpunit-ci": "@php -dpcov.enabled=1 -dpcov.directory=. -dpcov.exclude=\"~vendor~\" ./vendor/bin/phpunit --teamcity -c phpunit.xml.dist",
    "phpmd": "./vendor/bin/phpmd src text ./phpmd.xml",
    "phpcs": "./vendor/bin/phpcs -p src --runtime-set testVersion 7.3",
    "phpstan": "./vendor/bin/phpstan analyse -c phpstan.neon src --memory-limit=-1",
    "lint:fix": "./vendor/bin/phpcbf src",
    "lint": [
      "@phpcs",
      "@phpmd",
      "@phpstan"
    ],
    "verify": [
      "@lint",
      "@phpunit"
    ]
  },
  "support": {
    "email": "support@retailcrm.pro"
  },
  "autoload": {
    "psr-4": { "RetailCrm\\Api\\": "src/" }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "6.x-dev"
    }
  },
  "config": {
    "bin-dir": "vendor/bin",
    "process-timeout": 600
  }
}
